#!/bin/bash

project_status() {
  cd ~/projects/$1;
  SHORT_STATUS=$(git status -s 2>/dev/null);
  if [ "$SHORT_STATUS" ]; then
    echo "âœ— $1"
  else
    if [ ! -e '.git' ]; then
      echo "? $1"
    else
      echo "  $1"
    fi
  fi
}

export -f project_status
ls ~/projects | xargs -n 1 bash -c 'project_status "$0"'
